<resources>

    <!-- Booking Status Button Toggle Group Style -->
    <style name="bookingStatusButtonToggleGroupStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/booking_status_button_toggle_group_text_color</item>
        <item name="strokeColor">@color/booking_status_button_toggle_group_stroke_color</item>
    </style>

    <style name="priceRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/price_rating_bar</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:maxHeight">48dp</item>
    </style>

    <style name="exploreFragmentSliderStyle" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/exploreFragmentSliderTooltip</item>
        <item name="materialThemeOverlay">@style/exploreFragmentSliderThemeOverlay</item>
    </style>

    <style name="exploreFragmentSliderTooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- Background Color of the Tooltip -->
        <item name="backgroundTint">@color/transparentBlue</item>
    </style>

    <style name="exploreFragmentSliderThemeOverlay" parent="">
        <!-- Color used by the text in the Tooltip -->
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <!-- Date / Time Picker Dialog Theme -->
    <style name="pickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/lightBlue</item>
    </style>

    <!-- App Bar / Action Bar Customization -->
    <style name="actionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/black</item>
    </style>

</resources>