<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="restaurantHours"
            type="com.felixstanley.makanmoerahandroid.entity.restaurant.RestaurantHours" />
    </data>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/restaurant_hours_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@{restaurantHours.dayOfWeekString}" />

        <TextView
            android:id="@+id/restaurant_hours_opening_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@{restaurantHours.openingHour}" />

        <TextView
            android:id="@+id/restaurant_hours_closing_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{restaurantHours.closingHour}" />
    </TableRow>
</layout>