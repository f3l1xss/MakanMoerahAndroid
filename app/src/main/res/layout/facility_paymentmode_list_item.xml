<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="facilityPaymentModeListItem"
            type="com.felixstanley.makanmoerahandroid.fragment.restaurantdetails.FacilityPaymentModeListItem" />
    </data>

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:text="@{facilityPaymentModeListItem.firstItem.name}" />

        <!-- Second Item Text will be initialized by Adapter-->
        <TextView
            android:id="@+id/second_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>